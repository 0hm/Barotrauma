<?xml version="1.0" encoding="utf-8" ?>
<Character name ="mantistest" humanoid="false">

  <health
    vitality="200"
    doesbleed="false"/>

  <sound file="Content/Characters/Mantis/attack1.ogg" state="Attack" range="500"/>
  <sound file="Content/Characters/Mantis/attack2.ogg" state="Attack" range="500"/>

  <sound file="Content/Characters/Mantis/idle1.ogg" state="None" range="500"/>
  <sound file="Content/Characters/Mantis/idle2.ogg" state="None" range="500"/>
  <sound file="Content/Characters/Mantis/idle3.ogg" state="None" range="500"/>

  <ai
    combatstrength="250"
    attackcooldown="1.0"
    sight="0.5"
    hearing="1.0"
    aggressiveboarding="true"
    fleehealththreshold="20">
    
    <latchonto
      attachtowalls="true"/>

    <targetpriority tag="stronger" state="Escape" priority="100"/> 
    <targetpriority tag="dead" state="Eat" priority="90"/> 
    <targetpriority tag="human" state="Attack" priority="80"/>
    <targetpriority tag="door" state="Attack" priority="65"/>
    <targetpriority tag="weaker" state="Attack" priority="60"/>
    <targetpriority tag="sonar" state="Attack" priority="50"/>
    <targetpriority tag="room" state="Attack" priority="50"/>
    <targetpriority tag="nasonov" state="Attack" priority="50"/>
  </ai>
  
  <ragdoll 
    headposition="120" headangle="-90" 
    minscale="0.8" maxscale="1.2"
    waveamplitude="50.0" wavelength="2500" 
    swimspeed="2.5" walkspeed="3.0"
    runspeedmultiplier="2" swimspeedmultiplier="2.5"
    stepsize ="20.0,20.0"
    legtorque="10"
    footrotation ="180.0"
    impacttolerance="10"
    flip="true"
    draggable="true">

    <collider radius="60" height="170"/>
    
    <!-- head -->
    <limb id = "0" radius="70" type="Head" flip="true" steerforce="1.0" mouthpos="30,65">
      <sprite texture="Content/Characters/MantisTest/SeaMantis.png" sourcerect="0,0,170,167" depth="0.003" origin="0.5,0.5"/>
      <damagemodifier armorsector="0.0,180.0" afflictiontypes="damage" damagemultiplier="0.5" damagesound="LimbArmor" deflectprojectiles="true"/>
      <damagemodifier armorsector="0.0,180.0" afflictiontypes="bleeding" damagemultiplier="0.1" damagesound="LimbArmor" deflectprojectiles="true"/>
    </limb>
    
    <!-- neck -->
    <limb id="1" width="100" height="80" flip="true" mouthpos="30,65">
      <sprite texture="Content/Characters/MantisTest/SeaMantis.png" sourcerect="288,0,116,98" depth="0.006" origin="0.5,0.5"/>
      <damagemodifier armorsector="0.0,180.0" afflictiontypes="damage" damagemultiplier="0.5" damagesound="LimbArmor" deflectprojectiles="true"/>
      <damagemodifier armorsector="0.0,180.0" afflictiontypes="bleeding" damagemultiplier="0.1" damagesound="LimbArmor" deflectprojectiles="true"/>
    </limb>

    <!-- torso -->
    <limb id="2" radius="60" height="170" type="Torso" flip="true">
      <sprite texture="Content/Characters/MantisTest/SeaMantis.png" sourcerect="0,172,163,340" depth="0.003" origin="0.5,0.5"/>
      <damagemodifier armorsector="0.0,180.0" afflictiontypes="damage" damagemultiplier="0.5" damagesound="LimbArmor" deflectprojectiles="true"/>
      <damagemodifier armorsector="0.0,180.0" afflictiontypes="bleeding" damagemultiplier="0.1" damagesound="LimbArmor" deflectprojectiles="true"/>
    </limb>

    <!-- tail 1-->
    <limb id="3" width="70" height="130" type="Tail" flip="true">
      <sprite texture="Content/Characters/MantisTest/SeaMantis.png" sourcerect="431,0,79,138" depth="0.006" origin="0.5,0.5"/>
    </limb>
    <!-- tail 2-->
    <limb id="4" width="60" height="110" type="Tail" flip="true">
      <sprite texture="Content/Characters/MantisTest/SeaMantis.png" sourcerect="448,165,65,121" depth="0.007" origin="0.5,0.5"/>
    </limb>
    <!-- tail 3-->
    <limb id="5" width="40" height="160" type="Tail" flip="true">
      <sprite texture="Content/Characters/MantisTest/SeaMantis.png" sourcerect="459,297,46,162" depth="0.008" origin="0.5,0.5"/>
    </limb>

    <!-- front leg upper -->
    <limb id="6" width="70" height="200" refjoint="5" flip="true">
      <sprite texture="Content/Characters/MantisTest/SeaMantis.png" sourcerect="358,290,85,204" depth="0.002" origin="0.5,0.5"/>
    </limb>
    <!-- front leg lower -->
    <limb id="7" width="65" height="160" refjoint="5" flip="true">
      <sprite texture="Content/Characters/MantisTest/SeaMantis.png" sourcerect="359,111,73,177" depth="0.001" origin="0.5,0.5"/>
      <sound tag="footstep_armor"/>
    </limb>
    <!-- claw -->
    <limb id="8" radius="40" height="60" flip="true" pullpos="0.0,30.0" refjoint="5">
      <sprite texture="Content/Characters/MantisTest/SeaMantis.png" sourcerect="172,14,116,175" depth="0.0" origin="0.5,0.5"/>
      <attack range="200" damagerange="100" duration="0.25" structuredamage="10" itemdamage="12" structuresoundtype="StructureSlash"
              targetforce="-100" severlimbsprobability="0.8" torque="-20" force="10" applyforceonlimbs="0,6">
        <affliction name="Internal Damage" strength="10"/>
        <affliction name="Bleeding" strength="50"/>
        <affliction name="Stun" strength="0.1"/>
      </attack>
	    <sound tag="footstep_armor"/>
    </limb>

    <!-- back leg upper -->
    <limb id="9" width="60" height="150" type="LeftLeg" flip="true">
      <sprite texture="Content/Characters/MantisTest/SeaMantis.png" sourcerect="265,315,77,160" depth="0.005" origin="0.5,0.5"/>
    </limb>
    <!-- back leg lower -->
    <limb id="10" width="50" height="211" type="LeftFoot" flip="true" pullpos="0.0,30.0" refjoint="8" stepoffset="100.0,0.0">
      <sprite texture="Content/Characters/MantisTest/SeaMantis.png" sourcerect="286,101,63,211" depth="0.004" origin="0.5,0.5"/>
      <sound tag="footstep_armor"/>
    </limb>

    <!-- belly -->
    <limb id="11" radius="50" height="140">
      <sprite texture="Content/Characters/MantisTest/SeaMantis.png" sourcerect="162,242,103,260" depth="0.01" origin="0.5,0.5"/>
    </limb>

    <!-- head to neck -->
    <joint limb1="0" limb1anchor="-25,-56" limb2="1" limb2anchor="5,40" lowerlimit="-20" upperlimit="20" canbesevered="true"/>

    <!-- neck to torso -->
    <joint limb1="1" limb1anchor="7,-34" limb2="2" limb2anchor="31,127" lowerlimit="-20" upperlimit="30" canbesevered="true"/>

    <!-- torso to tail 1 -->
    <joint limb1="2" limb1anchor="18,-115" limb2="3" limb2anchor="7,13" lowerlimit="-20" upperlimit="40" canbesevered="true"/>
    <!-- tail 1 to tail 2 -->
    <joint limb1="3" limb1anchor="8,-43" limb2="4" limb2anchor="5,43" lowerlimit="-30" upperlimit="30" canbesevered="true"/>
    <!-- tail 2 to tail 3 -->
    <joint limb1="4" limb1anchor="4,-43" limb2="5" limb2anchor="0,59" lowerlimit="-30" upperlimit="30" canbesevered="true"/>

    <!-- torso to front leg upper -->
    <joint limb1="2" limb1anchor="31,78" limb2="6" limb2anchor="-5,67" lowerlimit="-250" upperlimit="-190" canbesevered="true"/>
    <!-- front leg upper to front leg lower -->
    <joint limb1="6" limb1anchor="6,-76" limb2="7" limb2anchor="3,-38" lowerlimit="-170" upperlimit="-30" canbesevered="true"/>
    <!-- front leg lower to claw -->
    <joint limb1="7" limb1anchor="-14,51" limb2="8" limb2anchor="-18,-61" lowerlimit="-20" upperlimit="80" canbesevered="true"/>

    <!-- torso to back leg upper -->
    <joint limb1="2" limb1anchor="40,-60" limb2="9" limb2anchor="6,15" lowerlimit="-0" upperlimit="-90" canbesevered="true"/>
    <!-- back leg upper to back leg lower -->
    <joint limb1="9" limb1anchor="-3,-67" limb2="10" limb2anchor="1,78" lowerlimit="-180" upperlimit="-10" canbesevered="true"/>
    
    <!-- torso to belly -->
    <joint limb1="2" limb1anchor="38,5" limb2="11" limb2anchor="0,0" lowerlimit="170" upperlimit="190" canbesevered="true"/>  
  </ragdoll>

</Character>

