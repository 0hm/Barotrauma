<?xml version="1.0" encoding="utf-8" ?>
<Items>
  <Item
    name="Coilgun"
    identifier="coilgun"
    Tags="turret"
    category="Machine"    
    spritecolor="1.0,0.0,0.0,1.0"
    focusonselected="true"
    offsetonselected="700"
    linkable="true">

    <Sprite texture="railgunbase.png" depth="0.01" sourcerect="0,0,256,256"/>

    <StaticBody width="80" radius="80"/>
    
    <Turret barrelsprite="railgunbarrel.png" canbeselected="true" linkable="true" origin="0.5, 0.85" barrelpos="128, 128" 
      rotationlimits="180,360"
      powerconsumption="200.0"
      showchargeindicator="true"
      showprojectileindicator="true"
      recoildistance="50"
      reload="0.25"
      springstiffnesslowskill="2" springstiffnesshighskill="50"
      springdampinglowskill="0.5" springdampinghighskill="10"
      rotationspeedlowskill="1" rotationspeedhighskill="8"
      hudtint="0.4,0.6,0.7,0.05">
      <sound file="Content/Items/Weapons/coilgun.ogg" range="2000" type="OnUse"/>
      <Crosshair texture="crosshair.png"/>
      <CrosshairPointer texture="crosshairPointer.png"/>
      <MoveSound file="Content/Items/Weapons/railgunloop.ogg"/>
      <StartMoveSound file="Content/Items/Weapons/railgunstart.ogg"/>
      <EndMoveSound file="Content/Items/Weapons/railgunstop.ogg"/>
      <RequiredSkill identifier="weapons" level="50"/>
    </Turret>

    <ConnectionPanel selectkey="Action" canbeselected = "true" msg="Rewire [Screwdriver]" hudpriority="10">
      <GuiFrame relativesize="0.2,0.32" minsize="400,350" maxsize="480,420" anchor="Center" style="ConnectionPanel"/>
      <RequiredItem identifier="screwdriver,Wire" type="Equipped"/>
      <input name="power_in"/>
      <input name="position_in"/>
      <input name="trigger_in"/>
    </ConnectionPanel>
  </Item>

  <Item
    name="Coilgun Loader"
    identifier="coilgunloader"
    category="Machine"
    linkable="true">

    <Sprite texture ="railgunetc.png" depth="0.8" sourcerect="0,0,177,128"/>

    <ItemContainer hideitems="false" drawinventory="true" capacity="1" slotsperrow="6" itempos="24,-75" iteminterval="26,0" itemrotation="90" canbeselected = "true">
      <Containable identifiers="coilgunammobox"/>
      <!-- when the coilgun is fired, it triggers this statuseffect, causing contained ammunition boxes to spawn new ammo -->
      <StatusEffect type="OnUse" target="Contained">
        <RequiredItem identifiers="coilgunammobox" type="Contained"/>
        <Use/>        
      </StatusEffect>
    </ItemContainer>
  </Item>

  <Item
    name="Coilgun Ammunition Box"
    identifier="coilgunammobox"
    category="Machine"
    linkable="true">

    <Sprite texture ="Content/Items/Containers/crates.png" depth="0.54" sourcerect="81,0,47,42"/>    
    <Body width="45" height="41" density="50"/>
    <Holdable slots="RightHand+LeftHand" holdpos="0,-80" handle1="-20,14" handle2="20,14" aimable="false"/>
    
    <ItemContainer hideitems="true" capacity="1" drawinventory="false" canbeselected="false">
      <!-- we cheat a bit with ammunition boxes - they don't actually contain hundreds of rounds, 
      but spawn a new round every time the OnUse effect is triggered. OnUse also reduces the condition
      of the item, and when the condition is 0, the box is considered empty. -->      
      <!--  -0.5 per usage = 200 shots per box -->
      <StatusEffect type="OnUse" target="This" condition="-0.5" disabledeltatime="true">
        <SpawnItem name="coilgunbolt" spawnposition="ThisInventory"/>
      </StatusEffect>
      <Containable identifiers="coilgunbolt"/>
    </ItemContainer>
  </Item>

  <Item
    name="Coilgun Bolt"
    identifier="coilgunbolt"
    category="Misc"
    sonarsize="2">

    <Price locationtype="Outpost" buyprice="300"/>
    <Price locationtype="Military" buyprice="200"/>
    <Price locationtype="City" buyprice="300"/>

    <Sprite texture="weapons.png" sourcerect="0,50,65,7" depth="0.55"/>

    <Body width="64" height="5" density="20"/>

    <Holdable slots="RightHand+LeftHand" holdpos="0,-50" handle1="-10,0" handle2="10,0" aimable="false"/>

    <Projectile characterusable="false" launchimpulse="80.0">
      <Attack structuredamage="20" severlimbsprobability="0.5">
        <Affliction identifier="internaldamage" strength="20"/>
        <Affliction identifier="bleeding" strength="5"/>
      </Attack>
      <StatusEffect type="OnActive" target="This">
        <ParticleEmitter particle="ammotrailwater" copyentityangle="true" anglemin="-5" anglemax="5" particleamount="5" velocitymin="-10" velocitymax="-100" scalemin="0.5" scalemax="1"/>
      </StatusEffect>
      <!-- reduce condition to give the bolt a 5 second lifetime -->
      <StatusEffect type="OnNotContained" target="This" condition="-20"/>
      <StatusEffect type="OnImpact" target="This">
        <Remove/>
      </StatusEffect>
      <StatusEffect type="OnBroken" target="This">
        <Remove/>
      </StatusEffect>
    </Projectile>
  </Item>
</Items>
