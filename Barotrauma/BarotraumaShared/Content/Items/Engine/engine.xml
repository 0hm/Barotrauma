<Items>
  <Item
    name="Engine"
    identifier="engine"
    linkable="true"
    category="Machine">

    <Sprite texture ="BTart_EngineDiesel_02.png" depth="0.8" sourcerect="0,0,752,591" canflipx="true"/>

    <trigger x="20" y ="0" width="590" height="464"/>

    <fixrequirement name="Mechanical repairs" fixDurationHighSkill="5" fixDurationLowSkill="30">
      <skill name="Mechanical Engineering" level="40"/>
      <item name="Welding Tool"/>
      <item name="Wrench"/>
    </fixrequirement>

    <Engine minvoltage="0.5" powerconsumption="2000.0" maxforce="2000" canbeselected = "true">
