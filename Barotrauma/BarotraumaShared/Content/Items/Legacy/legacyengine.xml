<?xml version="1.0" encoding="utf-8" ?>
<Items>
  <Item
    name="Engine"
    category="Legacy"
    linkable="true">

    <Sprite texture ="engine.png" depth="0.8" sourcerect="0,0,373,113" canflipx="true"/>

    <trigger x="20" y ="0" width="590" height="464"/>

    <Repairable selectkey="Action" name="Mechanical repairs" fixDurationHighSkill="5" fixDurationLowSkill="30" msg="Repair [Wrench]" hudpriority="10">
      <GuiFrame rect="0,0,400,180" alignment="Center" style="ItemUI"/>
      <RequiredSkill name="Mechanical Engineering" level="30"/>
      <RequiredItem name="Wrench" type="equipped"/>
    </Repairable>

    <Engine minvoltage="0.5" powerconsumption="2000.0" maxforce="2000" canbeselected = "true">
      <StatusEffect type="InWater" target="This" condition="-2.0"/>
      <GuiFrame rect="0,0,400,160" alignment="Center" style="ItemUI"/>
      <sound file="Content/Items/Engine/engine.ogg" type="OnActive" range="3000.0" volume="CurrentVolume" loop="true"/>
    </Engine>
    
    <ConnectionPanel selectkey="Action" canbeselected = "true" msg="Rewire [Screwdriver]" hudpriority="10">
      <GuiFrame rect="0,0,400,350" alignment="Center" style="ConnectionPanel"/>
      <requireditem name="Screwdriver" type="Equipped"/>
      <input name="power_in"/>
      <input name="set_force"/>
    </ConnectionPanel>

    <Optimizable optimizationtype="mechanical" description="Adjust trim values to increase the maximum thrust of the engine.">
      <requiredskill name="Mechanical Engineering" level="50" optimizationduration="360.0"/>
      <GuiFrame rect="0,0,400,180" alignment="Center" style="ItemUI"/>
    </Optimizable>

    <Optimizable optimizationtype="electrical" description="Secure all wire connections and adjust settings to decrease the power consumption of the engine.">
      <requiredskill name="Electrical Engineering" level="50" optimizationduration="360.0"/>
      <GuiFrame rect="0,0,400,180" alignment="Center" style="ItemUI"/>
    </Optimizable>    
  </Item>
</Items>