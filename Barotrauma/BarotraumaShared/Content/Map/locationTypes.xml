<locationtypes>
  <None
    name="Natural Formation"
    commonness="5"
    background="Content/Map/beaconbackground.jpg"
    allowedzones="1,2,3,4,5,6,7,8,9">
    
    <nameformats f0="[name]"/>

    <Symbol texture="Content/Map/beaconSymbol.png"/>
    
    <!-- can only become inhabited if there's an adjacent inhabited location AND there are no adjacent lairs -->
    
    <ChangeTo type="Outpost" probability="0.5" requiredduration="3" 
              requiredadjacentlocations="Outpost,Military,Research,City"
              disallowedadjacentlocations="Lair"/>
    
    <ChangeTo type="Military" probability="0.25" requiredduration="3" 
              requiredadjacentlocations="Outpost,Military,Research,City"
              disallowedadjacentlocations="Lair"/>
    
    <ChangeTo type="Research" probability="0.25" requiredduration="3" 
              requiredadjacentlocations="Outpost,Military,Research,City"
              disallowedadjacentlocations="Lair"/>
  </None>

  <City
    name="Colony"
    commonness="5"
    background="Content/Map/citybackground.jpg"
    allowedzones="1,2"
    halo="0,1,0,0.3">

    <Symbol texture="Content/Map/citySymbol.png"/>

    <Hireable name="Assistant" commonness="10"/>
    <Hireable name="Engineer" commonness="3"/>
    <Hireable name="Mechanic" commonness="3"/>
    <Hireable name="Medical Doctor" commonness="1"/>
    <Hireable name="Security Officer" commonness="1"/>
    <Hireable name="Captain" commonness="1"/>
    
    <nameformats
      f0="The City of [name]"
      f1="[name] City"
      f3="[name] Station"/>
  </City>

  <Outpost
    name="Habitation Outpost"
    commonness="5"
    background="Content/Map/beaconbackground.jpg"
    allowedzones="1,2,3"
    halo="0,1,0,0.2">

    <Symbol texture="Content/Map/citySymbol.png"/>
    
    <Hireable name="Assistant" commonness="10"/>
    <Hireable name="Engineer" commonness="3"/>
    <Hireable name="Mechanic" commonness="3"/>
    <Hireable name="Medical Doctor" commonness="1"/>
    <Hireable name="Security Officer" commonness="1"/>
    <Hireable name="Captain" commonness="1"/>

    <!-- can become a city if there are no adjacent lairs -->    
    <ChangeTo type="City" probability="0.1" requiredduration="5" disallowedadjacentlocations="Lair"/>

    <nameformats
      f0="[name] Habitation Outpost"
      f1="[name] Outpost"/>
  </Outpost>
  
  <Military
    name="Military Outpost"
    commonness="3"
    background="Content/Map/militarybackground.jpg"
    allowedzones="1,2,3,4"
    halo="0,1,0,0.4">

    <Symbol texture="Content/Map/militarySymbol.png"/>
    
    <Hireable name="Security Officer" commonness="10"/>
    <Hireable name="Captain" commonness="3"/>
    <Hireable name="Assistant" commonness="2"/>
    <Hireable name="Engineer" commonness="2"/>
    <Hireable name="Mechanic" commonness="2"/>
    <Hireable name="Medical Doctor" commonness="2"/>

    <nameformats
      f0="[name] Outpost"
      f1="[name] Facility"
      f2="[name] Station"
      f3="[name] Fortification"/>
  </Military>

  <Research
    name="Research Outpost"
    commonness="3"
    background="Content/Map/researchbackground.jpg"
    allowedzones="1,2,3"
    halo="0,1,0,0.2">

    <Symbol texture="Content/Map/researchSymbol.png"/>
    
    <Hireable name="Engineer" commonness="5"/>
    <Hireable name="Mechanic" commonness="5"/>
    <Hireable name="Medical Doctor" commonness="3"/>
    <Hireable name="Assistant" commonness="3"/>
    <Hireable name="Security Officer" commonness="1"/>
    <Hireable name="Captain" commonness="1"/>

    <nameformats
      f0="[name] Research Facility"
      f1="[name] Research Center"
      f2="[name] Institute of Astrobiology"
      f3="[name] Biomedical Research Center"/>
  </Research>

  <Lair
    name="Breeding Grounds"
    commonness="2"
    background="Content/Map/beaconbackground.jpg"
    allowedzones="1,2,3,4,5,6,7,8,9"
    halo="1,0,0,0.4">

    <Symbol texture="Content/Map/beaconSymbol.png"/>

    <nameformats
      f0="[name] Breeding Grounds"
      f1="[name] Reef"
      f2="The Hives of [name]"/>

    <!-- becomes an empty natural formation after being discovered (todo: require killing the monster(s) in the location) -->
    <ChangeTo type="None" probability="1.0"/>
  </Lair>

  <Ruins
    name="Alien Ruins"
    commonness="3"
    background="Content/Map/beaconbackground.jpg"
    allowedzones="3,4,5,6,7,8,9"
    halo="1,0,0,0.2">

    <Symbol texture="Content/Map/beaconSymbol.png"/>
    
    <nameformats
      f0="[name] Ruins"/>

    <ChangeTo type="Research" probability="0.4" requiredduration="3" disallowedadjacentlocations="Lair"/>    
    <ChangeTo type="Outpost" probability="0.05" requiredduration="3" disallowedadjacentlocations="Lair"/>
    <ChangeTo type="Military" probability="0.05" requiredduration="3" disallowedadjacentlocations="Lair"/>
  </Ruins>
</locationtypes>